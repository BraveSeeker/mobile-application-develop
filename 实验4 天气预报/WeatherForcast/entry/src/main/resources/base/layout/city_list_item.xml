<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:focus_border_radius="10vp"
    ohos:background_element="$media:listbar"
    ohos:top_margin="10vp">


    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$media:listbar"

        ohos:orientation="horizontal"
        >

        <Image
            ohos:id="$+id:cityList_icon"
            ohos:height="50vp"
            ohos:width="50vp"
            />

        <Text
            ohos:id="$+id:cityList_city"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:text_color="$color:black"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="25fp"
            />
        <Text
            ohos:id="$+id:cityList_nowTemp"
            ohos:height="match_parent"
            ohos:width="70vp"
            ohos:text_alignment="center"
            ohos:text_color="$color:black"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="25fp"
            />
        <Text
            ohos:id="$+id:cityList_tempRange"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="$color:black"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="25fp"
            />


    </DirectionalLayout>

</DirectionalLayout>
